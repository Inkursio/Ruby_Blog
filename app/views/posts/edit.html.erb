<h5>Редактировать</h5>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

  <p>
    Name<br>
    <%= f.text_field (:title) %>
  </p>

  <p>
    Text<br>
    <%= f.text_area (:body) %>
  </p>

  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image %><br>
  </div>

  <div>
    <%= f.label :images %><br>
    <%= f.file_field :images, multiple:true %><br>
  </div>

  <p>
    <%= f.submit ({:class => 'btn btn-success' })%>
  </p>

<% end %>